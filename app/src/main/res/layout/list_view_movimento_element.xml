<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:paddingHorizontal="5dp">

    <FrameLayout
        android:id="@+id/frame_layout_color"
        android:layout_width="10dp"
        android:layout_height="34dp"
        android:background="#4CAF50"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_nome_movimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Nome"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_view_categoria_movimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Lavoro"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_importo_movimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="textEnd"
            android:textSize="16dp"
            android:text="1200"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_view_data_movimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16dp"
            android:text="DD/MM/YYYY"
            android:textColor="@color/black" />

    </LinearLayout>


    <ImageView
        android:id="@+id/image_view_cancella_movimento"
        android:clickable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_delete" />

</LinearLayout>